<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_habit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_habit_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="ðŸƒ"
                android:textSize="32sp"
                android:gravity="center"
                android:background="@drawable/habit_icon_bg" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tv_habit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Morning Exercise"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tv_habit_streak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 / 30 days"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:alpha="0.8"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_check_habit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="âœ“"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/check_button_bg"
                android:padding="0dp" />
        </LinearLayout>

        <!-- Progress Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ProgressBar
                android:id="@+id/progress_habit"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="50"
                android:progressTint="#FFFFFF"
                android:progressBackgroundTint="#80FFFFFF" />

            <TextView
                android:id="@+id/tv_habit_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Week Calendar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="M"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/day_indicator"
                android:layout_margin="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="T"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/day_indicator"
                android:layout_margin="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="W"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/day_indicator"
                android:layout_margin="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="T"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/day_indicator"
                android:layout_margin="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="F"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/day_indicator"
                android:layout_margin="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="S"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/day_indicator"
                android:layout_margin="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="S"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:background="@drawable/day_indicator"
                android:layout_margin="2dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>