<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F9">

    <!-- AppBar chứa tiêu đề, nút Day/Week/Month, tuần navigation -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <!-- Tiêu đề và ngày chọn -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Calendar"
                android:textColor="#FF69B4"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_selected_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="No date selected"
                android:textColor="#FF4081"
                android:textSize="16sp" />

            <!-- Controls: Month / Week / Day -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_month_view"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="@color/pink_lighter"
                    android:text="Month"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_week_view"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="@color/pink_lighter"
                    android:text="Week"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_day_view"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="@color/pink_lighter"
                    android:text="Day"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Week navigation: Prev / WeekDays / Next -->
            <LinearLayout
                android:id="@+id/ll_week_nav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btn_prev_week"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_media_previous"
                    android:background="?selectableItemBackgroundBorderless"
                    android:contentDescription="Previous week" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_week_days"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <ImageButton
                    android:id="@+id/btn_next_week"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_media_next"
                    android:background="?selectableItemBackgroundBorderless"
                    android:contentDescription="Next week" />

            </LinearLayout>

        </LinearLayout>

        <!-- CalendarView bọc trong NestedScrollView để scroll mượt -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:background="#FFFFFF" />

        </androidx.core.widget.NestedScrollView>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- RecyclerView chính hiển thị Events -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:nestedScrollingEnabled="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- RecyclerView Day view (chiều cao wrap_content để scroll tốt) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_day_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:nestedScrollingEnabled="true"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- FloatingActionButton -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="#FF69B4"
        app:tint="#FFFFFF"
        app:layout_anchor="@id/recycler_events"
        app:layout_anchorGravity="bottom|end" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
